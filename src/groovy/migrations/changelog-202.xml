<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="fsil">
        <comment>remove asynchroneProcess on sequence</comment>
        <dropColumn tableName="sequence" columnName="asynchronous_process"/>
        <comment>add execution context column to sequence</comment>
        <addColumn tableName="sequence">
            <column name="execution_context" type="varchar(32)" defaultValue="FaceToFace">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>